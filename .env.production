# Production Environment Variables for Web Deployment
NODE_ENV=production
PORT=10000

# Base URL for the application (Render will set RENDER_EXTERNAL_URL automatically)
BASE_URL=https://aisocial-aahn.onrender.com

# MongoDB Atlas connection string for production
# IMPORTANT: Replace with your actual MongoDB Atlas connection string
MONGODB_URI=REPLACE_WITH_MONGODB_ATLAS_CONNECTION_STRING

# JWT Secret - Use a strong secret in production (minimum 32 characters)
# IMPORTANT: Replace with your actual secure JWT secret
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_MIN_32_CHARS_PRODUCTION

# Facebook App Credentials for production
# IMPORTANT: Replace with your actual Facebook app credentials
FACEBOOK_APP_ID=REPLACE_WITH_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=REPLACE_WITH_FACEBOOK_APP_SECRET
FB_APP_ID=REPLACE_WITH_FACEBOOK_APP_ID
FB_APP_SECRET=REPLACE_WITH_FACEBOOK_APP_SECRET

# OpenAI API Key for AI features
# IMPORTANT: Replace with your actual OpenAI API key
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY

# Session Secret for express-session (minimum 32 characters)
# IMPORTANT: Replace with your actual secure session secret
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_MIN_32_CHARS

# Encryption Key for sensitive data (32 characters exactly)
# IMPORTANT: Replace with your actual 32-character encryption key
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_ENCRYPTION_KEY

# Production domain for CORS and redirects
PRODUCTION_DOMAIN=https://aisocial-aahn.onrender.com

# Security settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration - Include the production domain
ALLOWED_ORIGINS=https://aisocial-aahn.onrender.com