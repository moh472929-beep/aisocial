# Production Environment Variables for Web Deployment
NODE_ENV=production
PORT=10000

# Base URL for the application (Render will set RENDER_EXTERNAL_URL automatically)
BASE_URL=https://aisocial-aahn.onrender.com

# MongoDB Atlas connection string for production
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/facebook-ai-manager?retryWrites=true&w=majority

# JWT Secret - Use a strong secret in production (minimum 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars

# Facebook App Credentials for production
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FB_APP_ID=your-facebook-app-id
FB_APP_SECRET=your-facebook-app-secret

# OpenAI API Key for AI features
OPENAI_API_KEY=your-openai-api-key

# Session Secret for express-session (minimum 32 characters)
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# Encryption Key for sensitive data (32 characters exactly)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Production domain for CORS and redirects
PRODUCTION_DOMAIN=https://aisocial-aahn.onrender.com

# Security settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration - Include the production domain
ALLOWED_ORIGINS=https://aisocial-aahn.onrender.com